#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n, i, j;

    printf("Qual a ordem da matriz? ");
    scanf("%d", &n);

    int mat[n][n];

    for(i=0; i<n; i++){
        for(j=0;j<n;j++){
            printf("Elemento [%d,%d]: ", i, j);
            scanf("%d", &mat[i][j]);
        }
    }

    printf("Diagonal principal: \n");
    for(i=0;i<n;i++){
        if(mat[i][i] == mat[i][i]){
            printf("%d ", mat[i][i]);
        }
    }
    printf("\n");
    int quant;
    quant = 0;

    for(i=0;i<n;i++){
        for(j=0;j<n;j++){
            if(mat[i][j]<0){
                quant++;
            }
        }
    }
    printf("QUANTIDADE DE NEGATIVOS = %d", quant);


    return 0;
}
